{
  "projectId": "15zcyz",
  "baseUrl": "https://ea-v3.myglobalshares.co.uk/",
  "chromeWebSecurity": false,
  "trashAssetsBeforeRuns": true,
  "integrationFolder": "cypress/integration/",
  "testFiles": ["**/*.feature", "**/*.spec.js"],
  "numTestsKeptInMemory": 15,
  "video": false,
  "defaultCommandTimeout": 15000,
  "viewportWidth": 1920,
  "viewportHeight": 1080,
  "ignoreTestFiles": ["**/__snapshots__/*", "**/__image_snapshots__/*"],
  "retries": {
    "runMode": 2,
    "openMode": 0
  },
  "experimentalSessionSupport": true,

  "screenshotOnRunFailure": false,
  "screenshotConfig": {
    "scale": false
  },

  "include": ["./node_modules/cypress", "cypress/**/*.js"],

  "reporter": "mochawesome",
  "reporterOptions": {
    "reportDir": "cypress/test-results/",
    "mochaFile": "cypress/test-results/my-test-output.xml",
    "jenkinsMode": false,
    "quite": true,
    "overwrite": false,
    "html": false,
    "json": true
  },

  "env": {
    "LOGIN_AUTH_URL": "https://ea-v3.myglobalshares.co.uk/",
    "HOME_PAGE_URL": "https://ea-v3.myglobalshares.co.uk/home",
    "DEFAULT_USER_AUTH": "lmello@globalshares.com",
    "VIEW_ONLY_DEFAULT_USER_AUTH": "ViewOnlyUser@globalshares.com",
    "VIEW_ONLY_USER_2_AUTH": "ViewOnlyUser2@globalshares.com",
    "DEFAULT_PASSWORD_AUTH": "Swordfish123!",
    "LANGUAGE": "english"
  }
}
